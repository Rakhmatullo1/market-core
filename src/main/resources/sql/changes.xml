<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="1" author="Raxmatullo" runAlways="true"  >
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="product_proposal" columnName="to_user_id"/>
            </not>
        </preConditions>
        <addColumn tableName="product_proposal">
            <column type="BIGINT" name="to_user_id">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="Raxmatullo" runAlways="true" >
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_user_id"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="product_proposal" baseColumnNames="to_user_id" constraintName="fk_user_id" referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>