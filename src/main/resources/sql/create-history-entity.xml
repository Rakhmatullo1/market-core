<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="1" author="Raxmatullo"  >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="history" />
            </not>
        </preConditions>
        <createTable tableName="history">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME(6)"/>
            <column name="by_user" type="VARCHAR(1024)"/>
            <column name="action" type="ENUM ('EXPORTED','IMPORTED','TRANSFERRED','DELETED','UPDATED','CREATED') "/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Raxmatullo" >
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_product_history_id"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="history" baseColumnNames="product_id" constraintName="fk_product_history_id" referencedTableName="product"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>