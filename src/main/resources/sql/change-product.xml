<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="1" author="Raxmatullo">
        <preConditions>
            <columnExists tableName="product" columnName="count"/>
        </preConditions>
        <dropColumn tableName="product" columnName="count"/>
    </changeSet>
    <changeSet id="2" author="Raxmatullo" >
        <preConditions>
            <not>
                <tableExists tableName="product_count"/>
            </not>
        </preConditions>
        <createTable tableName="product_count">
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="Raxmatullo">
        <preConditions>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_product_id"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="product_count" baseColumnNames="product_id" constraintName="fk_" referencedTableName="product"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>