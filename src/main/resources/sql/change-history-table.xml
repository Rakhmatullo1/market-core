<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">


    <changeSet id="1" author="Raxmatullo">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="history" columnName="user_id"/>
            </not>
        </preConditions>
        <addColumn tableName="history">
            <column name="user_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="Raxmatullo" >
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_user_history_id"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="history" baseColumnNames="user_id" constraintName="fk_user_history_id" referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>